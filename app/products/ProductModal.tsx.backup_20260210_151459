'use client';

import { useState } from 'react';
import Icon from '@/components/ui/AppIcon';

interface Product {
  id: string;
  name: string;
  category: string;
  price: number;
  images: string[];
  imageAlt?: string;
  quantity?: number | null;
  description?: string;
  sizes?: number[];
}

interface ProductModalProps {
  product: Product;
  onClose: () => void;
  onAddToCart: (product: Product, e: React.MouseEvent) => void;
}

interface SizeQuantity {
  size: number;
  quantity: number;
}

export default function ProductModal({ product, onClose, onAddToCart }: ProductModalProps) {
  const [selectedImageIndex, setSelectedImageIndex] = useState(0);
  const [sizeQuantities, setSizeQuantities] = useState<SizeQuantity[]>([]);
  const [selectedSize, setSelectedSize] = useState<number | ''>('');

  const getStockStatus = () => {
    if (product.quantity === 0) {
      return { text: 'Out of Stock', color: 'text-red-600', available: false };
    } else if (product.quantity !== null && product.quantity !== undefined) {
      return { text: `${product.quantity} in stock`, color: 'text-yellow-600', available: true };
    } else {
      return { text: 'In Stock', color: 'text-green-600', available: true };
    }
  };

  const stockStatus = getStockStatus();

  const handleAddSize = () => {
    if (selectedSize === '') return;
    const existing = sizeQuantities.find(sq => sq.size === selectedSize);
    if (existing) {
      setSizeQuantities(prev => prev.map(sq => sq.size === selectedSize ? { ...sq, quantity: sq.quantity + 1 } : sq));
    } else {
      setSizeQuantities(prev => [...prev, { size: selectedSize as number, quantity: 1 }]);
    }
    setSelectedSize('');
  };

  const updateQuantity = (size: number, change: number) => {
    setSizeQuantities(prev => prev.map(sq => sq.size === size ? { ...sq, quantity: Math.max(0, sq.quantity + change) } : sq).filter(sq => sq.quantity > 0));
  };

  const removeSize = (size: number) => {
    setSizeQuantities(prev => prev.filter(sq => sq.size !== size));
  };

  const getTotalItems = () => {
    return sizeQuantities.reduce((total, sq) => total + sq.quantity, 0);
  };

  const handleAddToCart = (e: React.MouseEvent) => {
    if (product.sizes && product.sizes.length > 0) {
      if (sizeQuantities.length === 0) {
        alert('Please select at least one size');
        return;
      }
      const productWithSizes = { ...product, selectedSizes: sizeQuantities };
      onAddToCart(productWithSizes as any, e);
    } else {
      onAddToCart(product, e);
    }
    onClose();
  };

  const availableSizes = product.sizes?.filter(size => !sizeQuantities.some(sq => sq.size === size)) || [];

  return (
    <>
      <div className="fixed inset-0 bg-black/60 backdrop-blur-sm z-50" onClick={onClose} />
      <div className="fixed inset-0 z-50 flex items-center justify-center p-4">
        <div className="bg-white rounded-2xl shadow-2xl max-w-5xl w-full max-h-[95vh] overflow-y-auto relative" onClick={(e) => e.stopPropagation()}>
          <button onClick={onClose} className="absolute top-4 right-4 p-2 bg-gray-100 hover:bg-gray-200 rounded-full transition-colors z-10">
            <Icon name="XMarkIcon" size={24} className="text-gray-900" />
          </button>
          <div className="grid grid-cols-1 md:grid-cols-2 gap-8 p-8">
            <div className="space-y-4">
              <div className="aspect-square bg-secondary rounded-xl overflow-hidden">
                <img src={product.images[selectedImageIndex]} alt={product.name} className="w-full h-full object-cover" />
              </div>
              {product.images.length > 1 && (
                <div className="grid grid-cols-4 gap-2">
                  {product.images.map((image, index) => (
                    <button key={index} onClick={() => setSelectedImageIndex(index)} className={`aspect-square rounded-lg overflow-hidden border-2 transition-all ${selectedImageIndex === index ? 'border-primary' : 'border-border hover:border-gray-400'}`}>
                      <img src={image} alt={`${product.name} ${index + 1}`} className="w-full h-full object-cover" />
                    </button>
                  ))}
                </div>
              )}
            </div>
            <div className="space-y-6">
              <div>
                <p className="text-sm text-muted-foreground uppercase tracking-wide mb-2">{product.category}</p>
                <h2 className="text-3xl font-bold text-foreground mb-4">{product.name}</h2>
                <p className="text-4xl font-bold text-primary">${product.price.toFixed(2)}</p>
              </div>
              <div className="flex items-center gap-2">
                <Icon name={stockStatus.available ? "CheckCircleIcon" : "XCircleIcon"} size={20} className={stockStatus.color} />
                <span className={`font-medium ${stockStatus.color}`}>{stockStatus.text}</span>
              </div>
              {product.sizes && product.sizes.length > 0 && (
                <div className="bg-gradient-to-br from-gray-50 to-gray-100 p-5 rounded-xl border border-gray-200">
                  <h3 className="text-lg font-semibold text-foreground mb-4">Select Size & Quantity</h3>
                  <div className="flex gap-3 mb-4">
                    <select value={selectedSize} onChange={(e) => setSelectedSize(e.target.value === '' ? '' : Number(e.target.value))} className="flex-1 px-4 py-3 bg-white border-2 border-gray-300 rounded-lg text-foreground font-medium focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all">
                      <option value="">Choose a size...</option>
                      {availableSizes.sort((a, b) => a - b).map(size => (
                        <option key={size} value={size}>Size {size}</option>
                      ))}
                    </select>
                    <button onClick={handleAddSize} disabled={selectedSize === ''} className="px-6 py-3 bg-primary text-white rounded-lg font-semibold hover:bg-primary/90 disabled:opacity-40 disabled:cursor-not-allowed transition-all shadow-sm hover:shadow-md">Add</button>
                  </div>
                  {sizeQuantities.length > 0 && (
                    <div className="space-y-3">
                      <div className="border-t border-gray-300 pt-4">
                        <h4 className="text-sm font-semibold text-gray-600 mb-3">Selected:</h4>
                        <div className="space-y-2">
                          {sizeQuantities.sort((a, b) => a.size - b.size).map(sq => (
                            <div key={sq.size} className="flex items-center justify-between p-3 bg-white rounded-lg border border-gray-200 shadow-sm">
                              <div className="flex items-center gap-3">
                                <div className="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
                                  <span className="text-lg font-bold text-white">{sq.size}</span>
                                </div>
                                <span className="font-semibold text-foreground">Size {sq.size}</span>
                              </div>
                              <div className="flex items-center gap-2">
                                <button onClick={() => updateQuantity(sq.size, -1)} className="w-8 h-8 flex items-center justify-center bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors font-bold text-gray-700">−</button>
                                <span className="w-10 text-center font-bold text-lg text-foreground">{sq.quantity}</span>
                                <button onClick={() => updateQuantity(sq.size, 1)} className="w-8 h-8 flex items-center justify-center bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors font-bold text-gray-700">+</button>
                                <button onClick={() => removeSize(sq.size)} className="ml-1 w-8 h-8 flex items-center justify-center text-red-500 hover:bg-red-50 rounded-lg transition-colors">
                                  <Icon name="TrashIcon" size={18} />
                                </button>
                              </div>
                            </div>
                          ))}
                        </div>
                      </div>
                      <div className="bg-primary/10 border border-primary/20 rounded-lg p-3 flex justify-between items-center">
                        <span className="font-semibold text-foreground">Total Items:</span>
                        <span className="text-2xl font-bold text-primary">{getTotalItems()}</span>
                      </div>
                    </div>
                  )}
                </div>
              )}
              {product.description && (
                <div>
                  <h3 className="text-lg font-semibold text-foreground mb-2">Description</h3>
                  <p className="text-muted-foreground leading-relaxed">{product.description}</p>
                </div>
              )}
              <div className="border-t border-border pt-6">
                <h3 className="text-lg font-semibold text-foreground mb-3">Product Details</h3>
                <div className="space-y-2 text-sm">
                  <div className="flex justify-between">
                    <span className="text-muted-foreground">Category:</span>
                    <span className="font-medium text-foreground">{product.category}</span>
                  </div>
                  <div className="flex justify-between">
                    <span className="text-muted-foreground">Product ID:</span>
                    <span className="font-medium text-foreground">#{product.id.slice(-8)}</span>
                  </div>
                  <div className="flex justify-between">
                    <span className="text-muted-foreground">Images:</span>
                    <span className="font-medium text-foreground">{product.images.length}</span>
                  </div>
                  {product.sizes && product.sizes.length > 0 && (
                    <div className="flex justify-between">
                      <span className="text-muted-foreground">Sizes Available:</span>
                      <span className="font-medium text-foreground">{product.sizes.length}</span>
                    </div>
                  )}
                </div>
              </div>
              <button onClick={handleAddToCart} disabled={!stockStatus.available} className={`w-full py-4 rounded-xl font-semibold text-lg transition-all flex items-center justify-center gap-3 ${stockStatus.available ? 'bg-green-500 hover:bg-green-600 text-white hover:scale-105 shadow-lg' : 'bg-gray-400 text-white cursor-not-allowed'}`}>
                <Icon name="ShoppingCartIcon" size={24} />
                {stockStatus.available ? (getTotalItems() > 0 && product.sizes && product.sizes.length > 0 ? `Add ${getTotalItems()} Item${getTotalItems() > 1 ? 's' : ''} to Cart` : 'Add to Cart') : 'Out of Stock'}
              </button>
            </div>
          </div>
        </div>
      </div>
    </>
  );
}
